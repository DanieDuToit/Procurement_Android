<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:endColor="@color/gradientStart_color"
                android:startColor="@color/gradientStart_color"
                android:angle="90" />
            <stroke
                android:width="4dp"
                android:color="@color/gradientEnd_color" />
            <corners
                android:radius="10dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="@color/gradientStart_color"
                android:endColor="@color/gradientStart_color"
                android:angle="270" />
            <stroke
                android:width="4dp"
                android:color="@color/gradientStart_color" />
            <corners
                android:radius="100dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>