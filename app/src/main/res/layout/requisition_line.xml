<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

    <!-- ItemDescription -->

    <TextView
        style="@style/input_field"
        android:id="@+id/tvLineNumber"
        android:paddingBottom="2dip"
        android:paddingLeft="3dip"
        android:text="#"
        android:layout_width="50dp"
        android:lines="1"/>

    <!-- ItemDescription -->

    <TextView
        style="@style/input_field"
        android:id="@+id/tvItemDescription"
        android:paddingBottom="2dip"
        android:paddingLeft="3dip"
        android:text="id"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="false"
        android:layout_toEndOf="@id/tvLineNumber"
        android:layout_width="70dp"
        android:layout_marginLeft="10dp"
        android:lines="1"/>

    <!-- AccCode -->

    <TextView
        style="@style/input_field"
        android:id="@+id/tvAccCode"
        android:layout_width="100dp"
        android:paddingBottom="2dip"
        android:paddingLeft="3dip"
        android:text="Acc  Code"
        android:layout_toEndOf="@id/tvItemDescription"
        android:layout_marginLeft="10dp"
        android:lines="1"/>

    <!-- LineQuantity -->

    <TextView
        style="@style/input_field"
        android:id="@+id/tvQuantity"
        android:gravity="left"
        android:paddingLeft="3dip"
        android:text="Qty"
        android:layout_toEndOf="@id/tvAccCode"
        android:layout_width="40dp"
        android:layout_marginLeft="10dp"
        android:lines="1"/>

    <!-- LineQuantity -->

    <TextView
        style="@style/input_field"
        android:id="@+id/tvLineTotal"
        android:gravity="left"
        android:paddingLeft="3dip"
        android:text="Total"
        android:layout_toRightOf="@+id/tvQuantity"
        android:layout_toEndOf="@id/tvQuantity"
        android:layout_width="100dp"
        android:layout_marginLeft="10dp"
        android:lines="1"/>

</RelativeLayout>